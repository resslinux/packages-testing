pkgbase=kmod
pkgname=('kmod-doc' 'kmod-dev' 'kmod')
pkgver=25.r0.gaca4eca
pkgrel=1
pkgdesc="Linux kernel module management tools and library"
url="https://git.kernel.org/pub/scm/utils/kernel/kmod/kmod.git"
arch=('x86_64')
license=('GPL2')
depends_doc=()
depends_dev=('kmod')
depends=('busybox' 'musl' 'zlib')
makedepends=()
source=('git://git.kernel.org/pub/scm/utils/kernel/kmod/kmod.git')
sha256sums=('SKIP')

pkgver() {
  cd "$pkgbase"
  
  git describe --long --tags | sed 's/^v//;s/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
  cd "$pkgbase"
  
  ./autogen.sh
  
  ./configure --prefix=/usr \
              --bindir=/bin \
              --sysconfdir=/etc \
              --with-zlib
  
  make
}

package(){
  package-init
  
  cd "$pkgbase"
  
  make DESTDIR="$tmpdir" install
}

package_kmod-doc() {
  package-doc
}

package_kmod-dev() {
  package-dev
}

package_kmod() {
  package-base
  
  mkdir -p "$pkgdir"/sbin
  
  local i
  
  for i in lsmod rmmod insmod modinfo modprobe depmod; do
    ln -sf ../bin/kmod "$pkgdir"/sbin/$i
  done
  
  for i in lsmod modinfo; do
    ln -s kmod "$pkgdir"/bin/$i
  done
}
